@require 'reset'
@require 'global'

html
	border 1px solid darken(backgroundColor, 10%)
	min-height windowHeight - 2
	height 100%
	width 100%
	overflow hidden
	box-sizing border-box
body
	border-top 40px solid darken(backgroundColor, 8%)
	background-color backgroundColor
	font-family font-stack
	padding 15px 15px 0
	box-sizing border-box
	-webkit-app-region drag
	*
		font-family inherit
		font-weight 100

img#npm-logo
	position absolute
	top 12px
	right 15px
	height 20px
	user-select none
	-webkit-app-region drag
	user-select none

h1
	color rgb(80,80,80)
	margin 0 0 15px 0
	cursor default
	font-size 18px
	user-select none

@require 'button'
@require 'primary-button'
@require 'npm-installer'
